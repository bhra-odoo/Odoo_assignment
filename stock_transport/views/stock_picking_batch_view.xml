<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_batch_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.batch.form.inherited</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id"/>
                <field name="vehical_id" placeholder="e.g. Opel GJ03XB9897"/>
                <field name="vehical_category_id" placeholder="e.g. semi-truck"/>
                <label for="weight" string="Weight"/>
                <div>
                    <field class="inline-block w-25"  name="weight" invisible="not vehical_category_id"/>
                    <field class="inline-block w-50"  name="weight_progressbar" widget="progressbar" invisible="not vehical_category_id" nolabel="1"/>
                </div>
                <label for="volume" string="Volume"/>
                <div>
                    <field class="inline-block w-25"  name="volume" invisible="not vehical_category_id"/>
                    <field class="inline-block w-50"  name="volume_progressbar" widget="progressbar" invisible="not vehical_category_id" nolabel="1"/>
                </div>
                
            </xpath>
        </field>
    </record>

    <record id="stock_picking_batch_graph" model="ir.ui.view">
        <field name="name">stock.picking.batch.graph</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph string="Batch Transfer">
                <field name="scheduled_date" interval="day"/>
                <field name="vehical_category_id"/>
            </graph>
        </field>
    </record>

    <record id="stock_picking_batch_gantt" model="ir.ui.view">
        <field name="name">stock.picking.batch.gantt</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt 
                date_start="create_date"
                date_stop="scheduled_date"
                default_scale="month"
                color="vehical_id"
                decoration-info="state == 'draft'"
                scales="day,week,month"
                string="Batch Transfer"
                default_group_by="vehical_id,dock_id"
                pill_label="True">
                <field name="state"/>
                <field name="vehical_category_id"/>
                <templates>
                    <div t-name="gantt-popover">
                        <div><strong>Category â€” </strong><t t-esc="vehical_category_id[1]"/></div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="stock_picking_batch_action_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="stock_picking_batch.stock_picking_batch_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="stock_picking_batch_action_graph">
        <field name="sequence" eval="2"/>
        <field name="view_mode">graph</field>
        <field name="act_window_id" ref="stock_picking_batch.stock_picking_batch_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="stock_picking_batch_action_gantt">
        <field name="sequence" eval="3"/>
        <field name="view_mode">gantt</field>
        <field name="act_window_id" ref="stock_picking_batch.stock_picking_batch_action"/>
    </record>
</odoo>
